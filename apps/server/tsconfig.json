{
	"include": ["src/**/*", "package.json"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"emitDeclarationOnly": true,
		"composite": true,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"types": ["./worker-configuration.d.ts"],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
